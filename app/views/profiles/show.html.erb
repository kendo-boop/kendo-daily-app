

/* 掲示板 - 投稿フォーム */
.post-form-card {
  border-radius: 8px;
  margin-bottom: 20px;
  border-left: 4px solid #33b5e5;
}

.post-form-content {
  padding: 20px;
}

.post-textarea {
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 12px;
  font-size: 15px;
  min-height: 100px !important;
  resize: vertical;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 15px;
}

.post-textarea:focus {
  border-color: #33b5e5 !important;
  box-shadow: 0 0 0 1px #33b5e5 !important;
  outline: none;
}

.post-form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10px;
  border-top: 1px solid #f0f0f0;
}

.post-media-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #757575;
  cursor: pointer;
  padding: 8px 16px;
  border-radius: 4px;
  transition: background 0.2s;
  border: 1px solid #e0e0e0;
  background: white;
  font-size: 14px;
}

.post-media-btn:hover {
  background: #f5f5f5;
}

.post-media-btn i {
  font-size: 20px;
}

.post-file-input {
  display: none;
}

.post-submit-btn {
  background: #33b5e5;
  border-radius: 4px;
  text-transform: none;
  font-weight: 500;
  padding: 0 32px;
  height: 40px;
  line-height: 40px;
  border: none;
  cursor: pointer;
  color: white;
  font-size: 15px;
}

.post-submit-btn:hover {
  background: #1e88e5;
}

/* プレビューエリア（フォーム内） */
#media-preview {
  margin-bottom: 15px;
  display: none;
}

.preview-item {
  position: relative;
  margin-bottom: 10px;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  border: 1px solid #e0e0e0;
}

.preview-image {
  width: 100%;
  height: auto;
  max-height: 400px;
  object-fit: contain;
  display: block;
  background: transparent;
}

.preview-video {
  width: 100%;
  height: auto;
  max-height: 400px;
  object-fit: contain;
  display: block;
  background: #000;
}

.preview-filename {
  padding: 8px 12px;
  background: rgba(0, 0, 0, 0.05);
  font-size: 0.9rem;
  color: #666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 投稿カード */
.post-card {
  border-radius: 8px;
  margin-bottom: 20px;
  border-left: 4px solid #e0e0e0;
  transition: all 0.2s;
}

.post-card:hover {
  border-left-color: #33b5e5;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

/* 投稿ヘッダー */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  padding-bottom: 12px;
  border-bottom: 1px solid #f5f5f5;
}

.post-user-info {
  display: flex;
  gap: 12px;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.post-user-badge {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 13px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 4px;
  white-space: nowrap;
  flex-shrink: 0;
}

.post-user-badge i {
  font-size: 16px;
}

.post-user-badge span {
  max-width: 150px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  color: #9e9e9e;
}

.post-timestamp {
  display: flex;
  align-items: center;
  gap: 4px;
}

.post-timestamp i {
  font-size: 14px;
}

.post-actions-menu {
  position: relative;
  flex-shrink: 0;
}

.post-menu-btn {
  color: #9e9e9e;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.post-menu-btn:hover {
  background: #f5f5f5;
  color: #616161;
}

.post-menu-btn i {
  font-size: 20px;
}

/* カスタムドロップダウンメニュー */
.post-menu-dropdown {
  position: absolute;
  right: 0;
  top: 100%;
  background: white;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  min-width: 150px;
  z-index: 1000;
  padding: 8px 0;
  margin-top: 4px;
}

.post-menu-dropdown a {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 16px;
  color: #212121;
  text-decoration: none;
  transition: background 0.2s;
}

.post-menu-dropdown a:hover {
  background: #f5f5f5;
}

.post-menu-dropdown a.post-delete-link {
  color: #f44336;
}

.post-menu-dropdown a.post-delete-link:hover {
  background: #ffebee;
}

.post-menu-dropdown a i {
  font-size: 20px;
}

/* 投稿内容 */
.post-content-text {
  color: #212121;
  font-size: 15px;
  line-height: 1.8;
  margin-bottom: 15px;
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* 投稿内のメディア表示（投稿後） */
.post-media-container {
  margin: 15px auto;
  max-width: 500px;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
}

.post-media-item {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-media-image {
  width: 100%;
  height: auto;
  max-height: 400px;
  object-fit: contain;
  display: block;
  background: transparent;
}

.post-media-video {
  width: 100%;
  height: auto;
  max-height: 400px;
  object-fit: contain;
  display: block;
  background: #000;
}

/* 投稿フッター */
.post-footer {
  border-top: 1px solid #f5f5f5;
  padding-top: 12px;
  margin-top: 12px;
}

.post-stats {
  display: flex;
  gap: 20px;
  margin-bottom: 12px;
  font-size: 14px;
  color: #757575;
}

.post-stat-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.post-stat-item i {
  font-size: 18px;
}

.post-stat-likes i {
  color: #f44336;
}

.post-stat-comments i {
  color: #33b5e5;
}

.post-action-buttons {
  display: flex;
  gap: 10px;
}

.post-action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 16px;
  color: #757575;
  border-radius: 4px;
  transition: all 0.2s;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  text-decoration: none;
  border: 1px solid #e0e0e0;
  background: white;
}

.post-action-btn:hover {
  background: #f5f5f5;
  border-color: #d0d0d0;
  color: #757575;
}

.post-action-btn i {
  font-size: 20px;
}

.post-action-btn.liked {
  color: #f44336;
  border-color: #f44336;
  background: #ffebee;
}

.post-action-btn.liked:hover {
  background: #ffcdd2;
}

/* コメントセクション */
.comments-section {
  margin-top: 20px;
  padding-top: 20px;
  border-top: 2px solid #f0f0f0;
}

.comments-header {
  font-size: 15px;
  font-weight: 600;
  color: #424242;
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.comments-header i {
  color: #33b5e5;
  font-size: 20px;
}

.comment-item {
  padding: 12px;
  background: #fafafa;
  border-radius: 8px;
  margin-bottom: 10px;
  border-left: 3px solid #33b5e5;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.comment-user {
  font-weight: 600;
  font-size: 14px;
  color: #33b5e5;
}

.comment-time {
  font-size: 12px;
  color: #9e9e9e;
}

.comment-delete-btn {
  color: #9e9e9e;
  padding: 2px;
  display: inline-flex;
  align-items: center;
  transition: color 0.2s;
}

.comment-delete-btn:hover {
  color: #f44336;
}

.comment-delete-btn i {
  font-size: 16px;
}

.comment-text {
  font-size: 14px;
  line-height: 1.6;
  color: #424242;
}

.comment-form {
  margin-top: 15px;
  display: flex;
  gap: 10px;
  align-items: flex-start;
}

.comment-input {
  flex: 1;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 10px 12px;
  font-size: 14px;
  resize: vertical;
  min-height: 40px;
  max-height: 120px;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.comment-input:focus {
  border-color: #33b5e5;
  outline: none;
  box-shadow: 0 0 0 1px #33b5e5;
}

.comment-submit-btn {
  background: #33b5e5;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: background 0.2s;
  white-space: nowrap;
}

.comment-submit-btn:hover {
  background: #1e88e5;
}

.comments-empty {
  text-align: center;
  padding: 20px;
  color: #9e9e9e;
  font-size: 14px;
}

.comments-more-info {
  text-align: center;
  color: #9e9e9e;
  font-size: 13px;
  margin: 15px 0 10px 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.comments-more-info i {
  font-size: 14px;
}

/* 削除確認モーダル */
.delete-confirm-icon-wrapper {
  text-align: center;
  margin-bottom: 20px;
}

.delete-confirm-icon-circle {
  width: 60px;
  height: 60px;
  margin: 0 auto;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #e0e0e0;
}

.delete-confirm-icon {
  font-size: 32px;
  color: #757575;
}

.delete-confirm-title {
  font-size: 18px;
  font-weight: 400;
  color: #424242;
  margin-bottom: 15px;
  text-align: center;
}

.delete-confirm-message {
  text-align: center;
  color: #757575;
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 0;
}

.delete-confirm-todo-name {
  font-weight: 600;
  color: #33b5e5;
}

.delete-confirm-warning {
  color: #9e9e9e;
  font-size: 13px;
}

.delete-modal-footer {
  padding: 20px 24px 30px 24px;
  background: #fafafa;
  border-top: 1px solid #e0e0e0;
  text-align: center;
}

.delete-cancel-btn {
  color: #757575;
  margin: 0 5px;
  font-weight: 500;
  min-width: 120px;
}

.delete-confirm-btn {
  background: #757575;
  border-radius: 25px;
  font-weight: 500;
  text-transform: none;
  margin: 0 5px;
  min-width: 120px;
}

.delete-confirm-btn:hover {
  background: #616161;
}

.delete-confirm-btn-icon {
  font-size: 18px;
}

.post-delete-form {
  display: none;
}

/* ページネーション - シンプルデザイン */
.pagination-wrapper {
  margin: 30px 0;
  text-align: center;
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
}

/* Kaminariのデフォルトクラスに対応 */
.pagination {
  display: inline-flex;
  flex-wrap: wrap;
  gap: 4px;
  align-items: center;
  justify-content: center;
  list-style: none;
  padding: 0;
  margin: 20px auto;
  max-width: 100%;
}

.pagination li {
  display: inline-block;
  list-style: none;
  flex-shrink: 1;
  min-width: 0;
}

/* 通常のページリンク */
.pagination a,
.pagination span {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 36px;
  height: 36px;
  padding: 0 8px;
  color: #757575;
  background: transparent;
  border: none;
  transition: all 0.2s;
  font-weight: 500;
  text-decoration: none;
  font-size: 14px;
  white-space: nowrap;
  box-sizing: border-box;
}

/* ホバー時 */
.pagination a:hover {
  color: #33b5e5;
  background: rgba(51, 181, 229, 0.1);
  border-radius: 4px;
}

/* 現在のページ（.current クラス） */
.pagination .current,
.pagination .active span {
  background: #33b5e5 !important;
  color: white !important;
  border-radius: 4px;
  cursor: default;
}

/* 無効なリンク（.disabled, .gap クラス） */
.pagination .disabled,
.pagination .disabled span,
.pagination .gap,
.pagination .truncation {
  color: #bdbdbd !important;
  cursor: default;
  background: transparent;
  pointer-events: none;
  min-width: 28px;
  padding: 0 4px;
}

/* 前後・最初・最後のページリンク */
.pagination .first a,
.pagination .prev a,
.pagination .next a,
.pagination .last a {
  font-size: 18px;
  font-weight: 600;
  min-width: 36px;
}

/* ページネーション情報テキスト（オプション） */
.pagination-info {
  text-align: center;
  color: #757575;
  font-size: 14px;
  margin-top: 15px;
}

/* タブレット対応 (601px - 992px) */
@media only screen and (min-width: 601px) and (max-width: 992px) {
  .post-card .card-content {
    padding: 18px;
  }
  
  .post-media-container,
  .preview-item {
    max-width: 600px;
  }
}

/* モバイル対応 (600px以下) */
@media only screen and (max-width: 600px) {
  /* 投稿フォーム */
  .post-form-content {
    padding: 15px;
  }
  
  .post-textarea {
    font-size: 14px;
    min-height: 80px !important;
  }
  
  .post-form-footer {
    flex-direction: column;
    gap: 10px;
  }
  
  .post-media-btn {
    width: 100%;
    justify-content: center;
  }
  
  .post-submit-btn {
    width: 100%;
  }
  
  /* 投稿カード */
  .post-card .card-content {
    padding: 15px;
  }
  
  /* 投稿ヘッダー */
  .post-header {
    flex-wrap: wrap;
  }
  
  .post-user-info {
    flex-wrap: wrap;
  }
  
  .post-user-badge span {
    max-width: 120px;
  }
  
  /* 投稿内容 */
  .post-content-text {
    font-size: 14px;
  }
  
  /* メディアコンテナ */
  .post-media-container,
  .preview-item {
    max-width: 100%;
  }
  
  /* アクションボタン */
  .post-action-buttons {
    flex-direction: column;
  }
  
  .post-action-btn {
    width: 100%;
  }
  
  /* コメントフォーム */
  .comment-form {
    flex-direction: column;
  }
  
  .comment-input {
    width: 100%;
  }
  
  .comment-submit-btn {
    width: 100%;
  }
  
  /* ページネーション */
  .pagination-wrapper {
    padding: 0 5px;
  }
  
  .pagination {
    gap: 3px;
  }
  
  .pagination a,
  .pagination span {
    min-width: 32px;
    height: 32px;
    font-size: 13px;
    padding: 0 6px;
  }
  
  .pagination .first a,
  .pagination .prev a,
  .pagination .next a,
  .pagination .last a {
    font-size: 16px;
  }
  
  /* モバイルでは最初・最後のリンクを非表示 */
  .pagination .first,
  .pagination .last {
    display: none;
  }
  
  /* モーダル */
  .modal {
    width: 90% !important;
    max-width: 400px !important;
  }
  
  .delete-confirm-title {
    font-size: 16px;
  }
  
  .delete-confirm-message {
    font-size: 13px;
  }
}