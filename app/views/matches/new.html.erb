<%= stylesheet_link_tag "matches_score", "data-turbo-track": "reload" %>

<div class="modal-overlay" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); z-index: 1000; display: flex; align-items: center; justify-content: center; padding: 20px;">
  <div class="modal-content" style="background: white; border-radius: 8px; padding: 24px; max-width: 500px; width: 90%; box-shadow: 0 4px 20px rgba(0,0,0,0.3);">
    <div class="modal-title" style="font-size: 20px; font-weight: 600; margin-bottom: 20px; color: #212121;">
      新しい試合を追加
    </div>
    
    <%= form_with model: @match, local: true, data: { turbo: false } do |f| %>
      <div class="form-group" style="margin-bottom: 20px;">
        <%= f.label :title, "試合名", style: "display: block; margin-bottom: 8px; color: #616161; font-weight: 500; font-size: 14px;" %>
        <%= f.text_field :title, placeholder: "例: 県大会準決勝", style: "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 4px; font-size: 14px; font-family: inherit; box-sizing: border-box;" %>
      </div>

      <div class="form-group" style="margin-bottom: 20px;">
        <%= f.label :match_type, "試合種別", style: "display: block; margin-bottom: 8px; color: #616161; font-weight: 500; font-size: 14px;" %>
        <%= f.select :match_type, 
            options_for_select([['団体戦', 'team'], ['個人戦', 'individual']], 'team'),
            {},
            { 
              style: "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 4px; font-size: 14px; font-family: inherit; background: white; color: #212121; box-sizing: border-box; display: block; height: auto; line-height: normal;",
              class: "browser-default"
            } 
        %>
      </div>

      <div class="form-group" style="margin-bottom: 20px;">
        <%= f.label :match_date, "試合日", style: "display: block; margin-bottom: 8px; color: #616161; font-weight: 500; font-size: 14px;" %>
        <%= f.date_field :match_date, value: Date.today, style: "width: 100%; padding: 12px; border: 1px solid #e0e0e0; border-radius: 4px; font-size: 14px; font-family: inherit; box-sizing: border-box;" %>
      </div>

      <div class="modal-actions" style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 24px; align-items: center;">
        <%= link_to "キャンセル", matches_path, class: "btn-cancel", style: "padding: 10px 24px; border: none; border-radius: 4px; font-size: 14px; font-weight: 500; cursor: pointer; background: #f5f5f5; color: #616161; text-decoration: none; display: inline-block; line-height: 1.4;" %>
        <%= f.submit "スコア表を作成", class: "btn-primary", style: "padding: 10px 24px; border: none; border-radius: 4px; font-size: 14px; font-weight: 500; cursor: pointer; background: #33b5e5; color: white; line-height: 1.4; height: auto; border: none;" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .btn-cancel:hover {
    background: #e0e0e0 !important;
  }
  
  .btn-primary:hover {
    background: #1e88e5 !important;
  }
  
  .form-group select {
    -webkit-appearance: menulist;
    -moz-appearance: menulist;
    appearance: menulist;
  }
  
  .form-group select option {
    color: #212121;
    background: white;
    padding: 8px;
  }
  
  /* Materialize CSSのデフォルトスタイルを上書き */
  select.browser-default {
    display: block !important;
    height: auto !important;
  }
</style>